mixin breadcrumbs(breadcrumbs__title,breadcrumbs__title1,breadcrumbs__title2)
  .breadcrumbs
          .breadcrumbs__linkPage 
              i(class="fas fa-home")
              .breadcrumbs__linkPage-container 
                span 
                  a(href="index.html")  Trang chủ /
                span=breadcrumbs__title1
                span=breadcrumbs__title2
          .breadcrumbs__content
              h3.breadcrumbs__content-title=breadcrumbs__title

