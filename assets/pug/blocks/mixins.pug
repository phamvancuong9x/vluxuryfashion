//- detailPruduct.html

mixin tagImg(linkImage,altImage='Ảnh')
  .image 
    img(src=linkImage, alt=altImage)

mixin box-support(linkImage,altImage='Ảnh',text)
  +tagImg(linkImage,altImage)
  span=text

//-
mixin text500(text)
  span(class="margin-top-bottom-7 fontWeight-500")=text

mixin text600(text)
  span( class="margin-top-bottom-7 fontWeight-600")=text

  //- Table tr product
mixin tableTr(linkImage,altImage,product__name,productSize,product__price,id_product="",id_user="")
  tr(data-id_user=id_user,data-id_product=id_product)
    td
      +tagImg(linkImage,altImage)
    td
      .product__name=product__name
      .product__size
       .product__size-name Size: 
          span.product__size-number=productSize
      .product__trademark Thương hiệu : Vluxury
      .product__cart-mobile 
        .product__quantity-mobile Số lượng :
          span.product__quantity-mobile_value 1
        .product__price=product__price
        .product__size-name-mobile Size: 
          span.product__size-number=productSize
          span.mobile-cart-remove Xóa
    td 
      .product__price=product__price
    td 
      .detailProduct__quantity-input
        input(type="text" value="1" name="quantity" class="product__quantity" pattern="[0-9]*" min="0" maxlength="2" required="")
        span.icon-minus-modal.icon-quantity-modal 
            i(class="fas fa-minus")
        span.icon-plus-modal.icon-quantity-modal 
            i(class="fas fa-plus")
    td 
      .product__priceTotalItem
    td 
      .cart-remove
        i(class="fas fa-trash-alt")

