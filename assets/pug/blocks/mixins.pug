//- Section Collection
mixin collection__item(linkImage,collection_title,typeProduct,isSale)
    div(data-type-product=typeProduct,data-is-sale=isSale).collection__item.typeProduct
                p.collection__item-image
                  img(src=linkImage alt='image-collection')
                .collection-title.wow.animate__animated.animate__fadeInUp.animate__delay-1s=collection_title
                p.bttn.collection__bttn XEM THÊM
//- section Sản Phẩm nổi bật
mixin featured-products__item(linkImage,productName,productPrice,idProduct="",typeProduct="",discount,initialPrice)
    li(data-id=idProduct ,data-type-product=typeProduct).featured-products__item.col-md-3.col-lg-3
              .featured-products__image
                img(src=linkImage alt='')
                if discount
                  .discount=discount
              .featured-products__name=productName
              .featured-products__price=productPrice
                if initialPrice
                  span.initialPrice=initialPrice

