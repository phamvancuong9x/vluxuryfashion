					li.nav-mobile__center-item.nav-mobile__parent-menu.nav-mobile__parent-menu-iconPlus
						.nav-mobile__parent-menu-title.nav-mobile__parent-menu-design
							| Thiết kế riêng  
							i.ti-minus
						ul.nav-mobile__sub-menu.nav__sub-menu2
							li.nav-mobile__sub-item
								a(href='customDesignShirt.html')  Áo sơ mi riêng
							li.nav-mobile__sub-item
								a(href='customDesignVest.html')  Bộ SUIT riêng
					li.nav-mobile__center-item
						a(href="news.html")  Tin Tức 
					li.nav-mobile__center-item
						a(href='map.html') Cửa Hàng
					li.nav-mobile__center-item.nav-mobile-login
						a( href='loginRegister.html')
							i.fas.fa-user
							span Đăng nhập
					li.header-mobile__user.nav-mobile__center-item
						.header-mobile__user-info
							.header-mobile__user-image
								img(src='assets/image/image_home/anhdaidien.jpg' alt='user image')
						div.header-mobile__user-content.header-user-container
							div(style='padding-bottom:5px;border-bottom: 1px solid #ccc;')
								.header-mobile__user-name
								i(class="ti-minus")
							ul.header-mobile__user-list
								li.header-mobile__user-item
									a(href='user.html')
										span Tài khoản của tôi
								li.header-mobile__user-item
									span Đơn mua
