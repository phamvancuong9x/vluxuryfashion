include mixins
//- header
#back-to-top
header
	.slider-header
		.slider-header__item
			.carousel.slide(data-bs-ride='carousel')
				.carousel-inner
					.carousel-item.active
						p.slider-header__text
							| Chào mừng quý khách đến với VLUXURY
					.carousel-item
						p.slider-header__text
							| Free ship từ đơn hàng 500k
					.carousel-item
						p.slider-header__text
							| Nhập mã
							span(class="margin-left-right-5" style='color: rgb(252, 101, 0);') D1AFAC
							| giảm ngay 5% đơn hàng
					.carousel-item
						p.slider-header__text
							| Free ship từ 500k
					.carousel-item
						p.slider-header__text Hỗ trợ 24/7
	nav.nav-desktop
		.nav__logo
			a.link-home(href='index.html')
				.logo__image
					img(src='assets/image/image_home/logo1.png' alt='Image logo')
				p.logo__text
					| VLUXURY 
					span R
		.nav__center
			ul.nav__center-list
				li.nav__center-item.typeProduct(data-type-product="categoryProductSale",data-is-sale="true") Khuyến Mãi
				li.nav__center-item.nav__parent-menu
					| Sản phẩm
					i.ti-angle-down
					ul.nav__sub-menu.nav__sub-menu2
						li.nav__sub-item
							p(class="typeProduct",data-is-sale="false",data-type-product="vest")  ÁO VEST NAM 
						li.nav__sub-item
							p(class="typeProduct",data-is-sale="false",data-type-product="somi")   ÁO SƠ MI NAM 
						li.nav__sub-item
							p(class="typeProduct",data-is-sale="false",data-type-product="quanau")   QUẦN ÂU NAM 
						li.nav__sub-item
							p(class="typeProduct",data-is-sale="false",data-type-product="giay")   GIẦY DA NAM 
						li.nav__sub-item
							p(class="typeProduct",data-is-sale="false",data-type-product="phukien")   PHỤ KIỆN 
				li.nav__center-item.nav__parent-menu
					| Thiết kế riêng
					i.ti-angle-down
					ul.nav__sub-menu.nav__sub-menu2
						li.nav__sub-item
							a(href="customDesignShirt.html") ÁO SƠ MI RIÊNG
						li.nav__sub-item
							a(href="customDesignVest.html") BỘ SUIT RIÊNG
				li.nav__center-item 
					a(href="news.html") Tin Tức
				li.nav__center-item
					a(href="map.html") Cửa hàng
		ul.nav__right-list
			li.nav__right-item
				label(for='nav__input-search')
					.nav__search-title
						| Tìm kiếm
						i.fas.fa-search
					.nav__search
						input#nav__input-search.nav__input(type='text' placeholder='Tìm sản phẩm...' oninput="enterToSwitchSearch()")
						a.nav__link-search(href='search.html')
							i.fas.fa-search
			li.nav__right-item.header__cart
				+header-cart()
			li.nav__right-item.nav__header-user
				a(class="user-login" href='loginRegister.html')
					i.fas.fa-user
			li.header__user
				.header__user-info
					.header__user-image
						img(src='assets/image/image_home/anhdaidien.jpg' alt='user image')
				ul.header__user-list
					li(style='padding-bottom:5px;border-bottom: 1px solid #ccc;')
						.header__user-name
					li.header__user-item
						a(href='user.html')
							span Tài khoản của tôi
					li.header__user-item
						span Đơn mua
					li.header__user-item.header__user-logout
						span Đăng xuất
	// nav mobile
	nav.nav-mobile
		.nav-mobile__icon-cart.header__cart
			+header-cart()
		.nav-mobile__logo.nav__logo
			a.link-home(href='index.html')
				.logo__image
					img(src='assets/image/image_home/logo1.png' alt='Image logo')
				p.logo__text
					| VLUXURY 
					span R
		.nav-mobile__menu-bars
			.menu-bars__icon-bars
				i.fas.fa-bars
			.menu-bars-container
				.menu-bars__close
					span Menu
					i.fas.fa-times
				label.nav-mobile__search(for='nav-mobile__input-search')
